
 <div class="row">
      <div class="col-sm-8 offset-sm-2">
        <%= form_with(model: @mokuhyou,local: true)do|f|%>
        <%= render 'layouts/error_messages',model: @mokuhyou %>
          <div class="form-group">
            <h1 class="text-center text-warning">目標設定</h1>
            <%= f.text_area :content,class: 'form-control',rows: 7 %>
          </div>
          <div class="text-right text-warning"><p>文字数制限:255字</p></div>
          <%= f.submit '投稿',class: 'btn btn-primary btn-block'%>
        <% end %>
      </div>
  </div>    
