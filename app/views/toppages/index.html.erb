<div class="row">
      <div class="col-sm-6 bg-light">
        <h1 class="text-center">みんなの質問一覧(新着)</h1>
         <div class="overflow-auto " style="height:700px; width:820px;">
            <% @questions.order(created_at: 'DESC').each do |question|%>
           <ul>
             <li>
                <p class="text-success d-inline"><i class="fas fa-user"></i><%= link_to question.user.name,user_path(question.user) %></p>
                <p class="text-secondary d-inline"><i class="fas fa-calendar-alt"></i><%= question.created_at.to_s(:datetime_jp) %></p>
                <p class="d-inline"><i class="fas fa-eye"></i><%= question.impressions_count %></p>
                <div class="kikikiki"><%=link_to simple_format(question.content),question_path(question) %></div>
            </li>
          </ul>
          <% end %>
        </div>
     </div>
     
     <div class="col-sm-6 bg-light">
        <h1 class="text-center">閲覧数ランキング</h1>
         <div class="overflow-auto " style="height:700px; width:820px;">
           <% @rank_questions.each.with_index(1) do |question,i|%>
                <% if i==1 %>
                 <p class="d-inline text-warning">1</p><i class="fas fa-crown"></i><p class="text-success d-inline"><i class="fas fa-user"></i><%= link_to question.user.name,user_path(question.user) %></p>
                <p class="text-secondary d-inline"><i class="fas fa-calendar-alt"></i><%= question.created_at.to_s(:datetime_jp) %></p>
                <p class="d-inline"><i class="fas fa-eye"></i><%= question.impressions_count %></p>
                <div class="kekekeke"><%=link_to simple_format(question.content),question_path(question) %></div>
                <% elsif i==2 %>
                <p class="d-inline text-danger">2</p><i class="fas fa-crown"></i><p class="text-success d-inline"><i class="fas fa-user"></i><%= link_to question.user.name,user_path(question.user) %></p>
                <p class="text-secondary d-inline"><i class="fas fa-calendar-alt"></i><%= question.created_at.to_s(:datetime_jp) %></p>
                <p class="d-inline"><i class="fas fa-eye"></i><%= question.impressions_count %></p>
                <div class="kekekeke"><%=link_to simple_format(question.content),question_path(question) %></div>
                <% elsif i==3%>
                 <p class="d-inline text-success">3</p> <i class="fas fa-crown"></i><p class="text-success d-inline"><i class="fas fa-user"></i><%= link_to question.user.name,user_path(question.user) %></p>
                <p class="text-secondary d-inline"><i class="fas fa-calendar-alt"></i><%= question.created_at.to_s(:datetime_jp) %></p>
                <p class="d-inline"><i class="fas fa-eye"></i><%= question.impressions_count %></p>
                <div class="kekekeke"><%=link_to simple_format(question.content),question_path(question) %></div>
                <% else %>
                <%= i %><p class="text-success d-inline"><i class="fas fa-user"></i><%= link_to question.user.name,user_path(question.user) %></p>
                <p class="text-secondary d-inline"><i class="fas fa-calendar-alt"></i><%= question.created_at.to_s(:datetime_jp) %></p>
                <p class="d-inline"><i class="fas fa-eye"></i><%= question.impressions_count %></p>
                <div class="kekekeke"><%=link_to simple_format(question.content),question_path(question) %></div>
                <% end %>
          <% end %>
        </div>
     </div>
</div>
    
   


