           <% end %>
        </div>
     </div>
    
 
   
     <div class="col-sm-6 bg-warning">
       <h1 class="text-center">閲覧数ランキング</h1>
       <div class="overflow-auto text-center" style="height:700px; width:800px;">
     <% @questions.order(impressions_count: 'DESC').each do|rank_question|%>
