
<div class="row mt-2"> 
  <div class=" col-sm-8 offset-2 text-center bg-light"> 
   <p class="d-inline text-success"><i class="fas fa-user"></i><%= @question.user.name %></p> 
    <p class="d-inline"><i class="fas fa-eye"></i><%= @question.impressions_count %></p> 
    <h2 class="d-inline text-primary">質問</h2><div class="oooo"><%= simple_format(@question.content) %></div>
  </div> 
</div>
    <div class="row">
      <div class="col-sm-8 offset-sm-2 bg-light text-center">
        <h3 class="text-center text-warning">回答</h3>
      <div class="overflow-auto" style="height:500px; width:700px;">
        <% @answers.order(created_at: :desc).each do |answer|%>
        <div class="eeee">
            <p class="d-inline"><i class="fas fa-user"></i><%= answer.name %></p>
            <p class="d-inline text-success"><i class="fas fa-calendar-alt"></i><%= answer.created_at %></p>
            <%= simple_format(answer.content) %>
            </div>
        <% end %>
     </div>
     </div>
   </div>
   
    
    
    <div class="row mt-2">
      <div class="col-sm-6 offset-sm-3" >
        <%= form_with(model: @answer, local: true) do |f| %>
        <%= render 'layouts/error_messages',model: @answer %>
          <%= hidden_field_tag :question_id, @question.id %>
          <%= f.text_field :name, :value => "名無し"%>
          <%= f.text_area :content,class: 'form-control',rows: 3 %>
          <div class="text-right text-danger"><p>文字数制限:255字</p></div>
          <%= f.submit '投稿',class: 'btn btn-primary btn-block'%>
        <% end %>
      </div>
    </div>
   
